 <div class="container">
    <div class="row">
        <% if flash[:notice] %>
            <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>
         <% if flash[:warning] %>
            <div class="alert alert-warning"><%= flash[:warning] %></div>
        <% end %>
    </div>
    <div class="panel panel-default">
        <% if UserCampaign.where(campaign_id: @campaign.id).where(user_id: User.current_user.id).first.present? %>
            <% if UserCampaign.where(campaign_id: @campaign.id).where(user_id: User.current_user.id).first.role_id == Role.where(shortDesc: "Admin").first.id %>                                            
                <div class="panel-heading">
                <%= render "campaign_products/form" %>
                </div>
            <% end %>
        <% end %>
        <div class="panel-heading">
            <h3 class="panel-title"><%= Campaign.find(params[:id]).name %> kumpanyasındaki ürünler</h3>
        </div>        
        <div class="panel-body">
            <%= render "campaign_products/index" %>
        </div>
        <div class="panel-body">
            <%= render "user_campaign_products/index" %>
        </div>
    </div>
 </div>