 <div class="container">
    <div class="row">
        <% if flash[:notice] %>
            <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>
         <% if flash[:warning] %>
            <div class="alert alert-warning"><%= flash[:warning] %></div>
        <% end %>
    </div>
    <div class="panel panel-default">
        <% if UserCampaign.where(campaign_id: @campaign.id).where(user_id: User.current_user.id).first.present? %>
            <% if UserCampaign.where(campaign_id: @campaign.id).where(user_id: User.current_user.id).first.role_id == Role.where(shortDesc: "Admin").first.id %>                                            
                <div class="panel-heading">
                <%= render "campaign_products/form", locals: {campaign_product: @user_campaign_product, product: @product }%>
                </div>
            <% end %>
        <% end %>
        <div class="panel-heading">
            <h3 class="panel-title"><%= Campaign.find(params[:id]).name %> kumpanyasındaki ürünler</h3>
        </div>        
        <div class="panel-body">
            <% if(@campaign_products.present?) %> 
                <ul class="list-group">
                    <% @campaign_products.each do |campaignProduct| %>
                        <li class="list-group-item">
                            <%= link_to t("AddToBasket"), add_to_basket_path(UserCampaign.where(user: User.current_user.id).where(campaign_id: campaignProduct.campaign_id).first.id, campaignProduct.product_id), method: "POST",  class: "btn btn-sm btn-primary"%>
                            <%= campaignProduct.name %> -
                            <%= campaignProduct.price %>
                                TL
                            </%>
                            <b>                            
                            <% if campaignProduct.price_type_id == 1 %>
                                <% if campaignProduct.campaign.user_campaigns.present? %>
                                     <%= " (" + campaignProduct.campaign.user_campaigns.count.to_s %>
                                <% else %>
                                    (0
                                <% end %> kullanıcı için)     
                            <% else %>
                                / adet 
                            <% end %>
                            </b>
                            
                        </li> 
                    <% end %>
                </ul>
            <% end %>           
        </div>
    </div>
 </div>